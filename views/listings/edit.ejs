<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h2>Edit a new listing</h2>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  class="form-control"><%= listing.description %></textarea type="text" required>
        </div>
        
        <div class="mb-3">
            <lable for="image" class="form-label">Image</lable>
            <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control">
        </div>

        <div class="row">
        
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required>
        </div>
             
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
        </div>
    </div>
        
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" value="<%= listing.location %>" type="text" required>
        </div>
        
        <br><br>

        <button class="btn btn-dark edit-btn">edit your listing</button>
    </form>
</div>
</div>